<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/edit-product" method="POST">
            <input type="text" type="hidden" name="productId" value="<%= product.id %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="updatedTitle" id="updatedTitle" value="<%= product.title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="updatedImageUrl" id="updatedImageUrl" value="<%= product.imageUrl %>" >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="updatedPrice" id="updatedPrice" step="0.01" value="<%= product.price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="updatedDescription" id="updatedDescription" rows="5"><%= product.description %></textarea>
            </div>

            <button class="btn" type="submit">Update Product</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
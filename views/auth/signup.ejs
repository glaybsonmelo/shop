<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="login-form" action="/signup" method="POST">
            <% if (errorMessage) { %>
                <div class="user-message message--error"><%= errorMessage %></div>
            <% } %>
            <div class="form-control">
                <label for="name">Name</label>

                <input type="text" name="name" id="name" value="<%= oldInput.name %>">

            </div>
            <div class="form-control">
                <label for="email">E-mail</label>
                <input class="<%= validationErrors.find(e => e.param == "email") ? 'invalid' : '' %>" type="email" name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">password</label>
                <input class="<%= validationErrors.find(e => e.param == "password") ? 'invalid' : '' %>" type="text" name="password" id="password" value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm password</label>
                <input class="<%= validationErrors.find(e => e.param == "confirmPassword") ? 'invalid' : '' %>" type="text" name="confirmPassword" id="confirmPassword" value="<%= oldInput.confirmPassword %>">
            </div>
            <input type="text" name="_csrf" id="csrfToken" hidden value="<%= csrfToken %>">
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>